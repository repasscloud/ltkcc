<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LTKCC.Views.SupportedApplicationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Supported Applications">

    <Grid RowDefinitions="Auto,Auto,Auto,*" ColumnDefinitions="*,*" Padding="16" RowSpacing="10" ColumnSpacing="16">

        <!-- Editor -->
        <VerticalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="8">
            <Label Text="Name (required, unique)" FontAttributes="Bold" />
            <Entry Text="{Binding Name}" Placeholder="Application name" />

            <Label Text="Description (optional)" FontAttributes="Bold" />
            <Editor Text="{Binding Description}" Placeholder="Description" AutoSize="TextChanges" />

            <Label Text="{Binding CreatedAtText}" FontSize="12" Opacity="0.7" />

            <Label Text="{Binding ErrorText}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorText, Converter={StaticResource StringNotEmptyConverter}}" />
        </VerticalStackLayout>

        <!-- Buttons -->
        <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="10">
            <Button Text="Save" Command="{Binding SaveCommand}" />
            <Button Text="New" Command="{Binding NewCommand}" />
            <Button Text="Refresh" Command="{Binding RefreshCommand}" />
        </HorizontalStackLayout>

        <BoxView Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="1" Opacity="0.3" />

        <!-- List -->
        <CollectionView Grid.Row="3" Grid.ColumnSpan="2"
                        ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedItem}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="Auto,Auto">
                        <Label Text="{Binding Name}" FontAttributes="Bold" />
                        <Label Grid.Row="1" Text="{Binding Description}" FontSize="12" Opacity="0.7" LineBreakMode="TailTruncation" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
